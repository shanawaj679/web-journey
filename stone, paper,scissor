<body>
    <button onclick="stone()" id="sto" >STONE</button>
    <button onclick="paper()" id="pap" >PAPER</button>
    <button onclick="scissor()" id="sci" >SCISSOR</button>
    <p id="output"></p>
    <script>
        let a,b,c,d;
      let obj={
        won:0,
        lose:0,
        tie:0,
      }
      function stone(){
        a=document.getElementById("sto").innerText;
      
        d=Math.floor(Math.random()*4)+1;
        if(d<2){
           b="STONE"
        }
        else if(d<3){
        b="PAPER"
        }
        else{
         b="SCISSOR"
        }
       
      if(a===b){
        obj.tie+=1;
        alert(`you selected ${a}, computer selected ${b}, your result= TIE \n score: tie=${obj.tie}, won=${obj.won}, lose=${obj.lose}`);
      }
      if(b==="PAPER"){
        obj.lose+=1;
        alert(`you selected ${a}, computer selected ${b}, your result= LOSE \n score: tie=${obj.tie}, won=${obj.won}, lose=${obj.lose}`);
      }
      if(b==="SCISSOR"){
        obj.won+=1;
        alert(`you selected ${a}, computer selected ${b}, your result= WON \n score: tie=${obj.tie}, won=${obj.won}, lose=${obj.lose}`);
      }
      document.getElementById("output").innerText=`score: tie=${obj.tie}, won=${obj.won}, lose=${obj.lose}`;
      }
      function paper(){
          d=Math.floor(Math.random()*3)+1;
            a=document.getElementById("pap").innerText;
         if(d<2){
            b="STONE"
        }
        else if(d<3){
             b="PAPER"
        }
        else{
             b="SCISSOR"
        }
        if(a===b){
        obj.tie+=1;
        alert(`you selected ${a}, computer selected ${b}, your result= TIE \n score: tie=${obj.tie}, won=${obj.won}, lose=${obj.lose}`);
      }
      if(b==="STONE"){
        obj.won+=1;
        alert(`you selected ${a}, computer selected ${b}, your result= WON \n score: tie=${obj.tie}, won=${obj.won}, lose=${obj.lose}`);
      }
      if(b==="SCISSOR"){
        obj.lose+=1;
        alert(`you selected ${a}, computer selected ${b}, your result= LOSE \n score: tie=${obj.tie}, won=${obj.won}, lose=${obj.lose}`);
      }
              document.getElementById("output").innerText=`score: tie=${obj.tie}, won=${obj.won}, lose=${obj.lose}`;
      }
      function scissor(){
        d=Math.floor(Math.random()*3)+1;
          a=document.getElementById("sci").innerText;
         if(d<2){
           b="STONE"
        }
        else if(d<3){
             b="PAPER"
        }
        else{
             b="SCISSOR"
        }
        if(a===b){
        obj.tie+=1;
        alert(`you selected ${a}, computer selected ${b}, your result= TIE \n score: tie=${obj.tie}, won=${obj.won}, lose=${obj.lose}`);
      }
      if(b==="STONE"){
        obj.lose+=1;
        alert(`you selected ${a}, computer selected ${b}, your result= LOSE \n score: tie=${obj.tie}, won=${obj.won}, lose=${obj.lose}`);
      }
      if(b==="PAPER"){
        obj.won+=1;
        alert(`you selected ${a}, computer selected ${b}, your result= WIN \n score: tie=${obj.tie}, won=${obj.won}, lose=${obj.lose}`);
      }
                document.getElementById("output").innerText=`score: tie=${obj.tie}, won=${obj.won}, lose=${obj.lose}`;
      }
    </script>
